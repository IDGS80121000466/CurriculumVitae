@{
}
@model Currículum_Vitae.Models.CurriculumViewModel
<div class="container mt-5">
    <div class="row align-items-start mb-4">
        <div class="col-md-3 text-center">
            <div class="profile-image">
                <img src="/img/FotoEmmanuelEscobedo.jpg" alt="Foto Emmanuel" class="rounded-circle img-thumbnail" width="200" height="200" />
            </div>
        </div>
        <div class="col-md-9">
            <h1 class="display-4">@Model.InformacionPersonal.NombreCompleto</h1>
            <div class="card-body">
                <p><i class="fas fa-map-marker-alt"></i> <strong>Dirección:</strong> @Model.InformacionPersonal.Direccion</p>
                <p><i class="fas fa-phone"></i> <strong>Teléfono:</strong> @Model.InformacionPersonal.Telefono</p>
                <p><i class="fas fa-envelope"></i> <strong>Email:</strong> @Model.InformacionPersonal.Email</p>
                <p><i class="fas fa-mars"></i> <strong>Sexo:</strong> @Model.InformacionPersonal.Sexo</p>
            </div>
            <a href="@Url.Action("Index", "Home")" class="btn btn-primary mt-3">
                <i class="fas fa-user"></i> Perfil
            </a>
            <a href="@Url.Action("ExperienciaProfesional", "ExperienciaProfesional")" class="btn btn-primary mt-3">
                <i class="fas fa-briefcase"></i> Experiencia Profesional
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-3">
            <div class="card mb-4">
                <div class="card-header">
                    <h2 class="card-title">Habilidades</h2>
                </div>
                <div class="card-body">
                    <p><i class="fas fa-laptop-code"></i> Desarrollo web y móvil</p>
                    <p><i class="fab fa-java"></i> Programación en Java</p>
                    <p><i class="fab fa-js"></i> Programación en JavaScript</p>
                    <p><i class="fab fa-html5"></i> Programación en HTML</p>
                    <p><i class="fab fa-python"></i> Programación en Python</p>
                    <p><i class="fas fa-database"></i> Programación en SQL</p>
                    <p><i class="fab fa-windows"></i> Programación en C#</p>
                    <p><i class="fas fa-database"></i> Diseño de bases de datos</p>
                    <p><i class="fas fa-tasks"></i> Gestión de proyectos</p>
                </div>
            </div>
            <div class="card mb-4">
                <div class="card-header">
                    <h2 class="card-title">Aptitudes</h2>
                </div>
                <div class="card-body">
                    <p><i class="fas fa-users"></i> Trabajo en equipo</p>
                    <p><i class="fas fa-comments"></i> Comunicación efectiva</p>
                    <p><i class="fas fa-adjust"></i> Adaptabilidad</p>
                    <p><i class="fas fa-tools"></i> Resolución de problemas</p>
                </div>
            </div>
            <div class="card mb-4">
                <div class="card-header">
                    <h2 class="card-title">Idiomas</h2>
                </div>
                <div class="card-body">
                    <ul>
                        <li>Español (Nativo)</li>
                        <li>Inglés (B1)</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-md-9">
            <div class="card mb-4">
                <div class="card-header">
                    <h2 class="card-title">Formación Académica</h2>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-3 text-right"><strong>Ingeniería</strong></div>
                        <div class="col-9">
                            <p class="mb-1">Sep 2023 - presente</p>
                            <p class="mb-1">Universidad Tecnológica de León, León, Guanajuato</p>
                            <p>@Model.InformacionFormacionAcademica.Carrera</p>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-3 text-right"><strong>Técnico Superior Universitario</strong></div>
                        <div class="col-9">
                            <p class="mb-1">Sep 2021 - Ago 2023</p>
                            <p class="mb-1">Universidad Tecnológica de León, León, Guanajuato</p>
                            <p>@Model.InformacionFormacionAcademica.TSU</p>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-3 text-right"><strong>Bachillerato</strong></div>
                        <div class="col-9">
                            <p class="mb-1">Ago 2018 - Jun 2021</p>
                            <p class="mb-1">Colegio de Estudios Científicos y Tecnológicos del estado de Guanajuato, Purísima del Rincón, Guanajuato</p>
                            <p>@Model.InformacionFormacionAcademica.Bachillerato</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card mb-4">
                <div class="card-header">
                    <h2 class="card-title">Cursos</h2>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-3 text-right"><strong>Seguridad Informática</strong></div>
                        <div class="col-9">
                            <div class="row">
                                <div class="col"><strong>Fecha:</strong></div>
                                <div class="col"><p class="mb-1">Sep 2023 - Dic 2023</p></div>
                            </div>
                            <div class="row">
                                <div class="col"><strong>Lugar:</strong></div>
                                <div class="col"><p class="mb-1">León, Guanajuato</p></div>
                            </div>
                            <div class="row">
                                <div class="col"><strong>Duración:</strong></div>
                                <div class="col"><p class="mb-1">4 meses</p></div>
                            </div>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-3 text-right"><strong>Java I IZO-819</strong></div>
                        <div class="col-9">
                            <div class="row">
                                <div class="col"><strong>Fecha:</strong></div>
                                <div class="col"><p class="mb-1">Feb 2023</p></div>
                            </div>
                            <div class="row">
                                <div class="col"><strong>Lugar:</strong></div>
                                <div class="col"><p class="mb-1">Virtual</p></div>
                            </div>
                            <div class="row">
                                <div class="col"><strong>Duración:</strong></div>
                                <div class="col"><p class="mb-1">5 Días</p></div>
                            </div>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-3 text-right"><strong>CCNAc7: Introducción a Redes</strong></div>
                        <div class="col-9">
                            <div class="row">
                                <div class="col"><strong>Fecha:</strong></div>
                                <div class="col"><p class="mb-1">Mar 2022</p></div>
                            </div>
                            <div class="row">
                                <div class="col"><strong>Lugar:</strong></div>
                                <div class="col"><p class="mb-1">León, Guanajuato</p></div>
                            </div>
                            <div class="row">
                                <div class="col"><strong>Duración:</strong></div>
                                <div class="col"><p class="mb-1">4 meses</p></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card mb-4">
                <div class="card-header">
                    <h2 class="card-title">Certificados</h2>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-3 text-right"><strong>Microsoft Word 2016 Academic</strong></div>
                        <div class="col-9">
                            <div class="row">
                                <div class="col"><strong>Fecha:</strong></div>
                                <div class="col"><p class="mb-1">Jun 2019</p></div>
                            </div>
                            <div class="row">
                                <div class="col"><strong>Lugar:</strong></div>
                                <div class="col"><p class="mb-1">Purísima del Rincón, Guanajuato</p></div>
                            </div>
                            <div class="row">
                                <div class="col"><strong>Duración:</strong></div>
                                <div class="col"><p class="mb-1">60 horas</p></div>
                            </div>
                        </div>
                    </div>                   
                </div>
            </div>
        </div>
    </div>
</div>


                
